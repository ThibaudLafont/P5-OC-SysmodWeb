{% extends "Admin/form.twig" %}

{% block subtitle %}
    <section id="sub_title" class="container pb-4 px-4">
        <hr class="sm-hide mt-0">
        <section class="row">
            <div class="col-sm sub_head_item">
                <hr class="sm-show  mt-0">
                <div>
                    <img class="head_item_img" src="/public/img/pictos/plus-o.png" alt="">
                    <span>
                        Ajouté le <br class="sm-hide"/>
                        {{ entity.date }}
                    </span>
                </div>
                <hr class="sm-show">
            </div>
            <div class="col-sm sub_head_item">
                <div>
                    <img class="head_item_img" src="/public/img/pictos/keyboard-o.png" alt="">
                    <span>
                        {% if entity.editDate is not null %}
                            Dernière modification le <br class="sm-hide"/>
                            {{ entity.editDate }}
                        {% else %}
                            Jamais modifié
                        {% endif %}
                    </span>
                </div>
                <hr class="sm-show">
            </div>
        </section>
        <hr class="sm-hide">
    </section>
{% endblock %}
