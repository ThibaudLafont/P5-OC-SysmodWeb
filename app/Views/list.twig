{% extends "default.twig" %}

{% block view %}
	{% for post in posts %}
		<section style="width: 850px; margin: auto">
			<h3>{{ post.title }}, <em>{{ post.date }}</em></h3>
			<img src="{{ post.image }}" style="display:block; margin: auto">
			<p>{{ post.sum }}</p>
			<nav>
				<a href="{{ post.url }}">Lire {{ post.title }}</a>
			</nav>
		</section>
	{% endfor %}
{% endblock %}
