{% extends "default.twig" %}

{% block view %}
	<form action='/send-contact-mail' method='post'>
		{% if flash is defined %}
			{% if flash.type == 'alert' %}
				<div class="flash alert">{{ flash.content }}</div>	
			{% elseif flash.type == 'success' %}
				<div class="flash success">{{ flash.content }}</div>	
			{% endif %}
		{% endif %}

		{{ form.buildView|raw }}
		<input type="submit"/>
	</form>

{% endblock %}
